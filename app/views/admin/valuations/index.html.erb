<div class="container pt-5 px-sm-0 pb-5">
  <div class="row">
    <h3>見込みランク一覧・追加</h3>
  </div>
  <div class="mt-5">
    <%= form_with model: @valuation, url: admin_valuations_path, local: true do |f| %>
    <div class ="row">
      <td><h5 class="font-weight-bold">ランク　</h5></td>
          <td>
            <%= form_with model: @valuation,url: admin_valuations_path, method: :post do |f| %>
              <%= f.select :grade, Valuation.grades.keys.map{|k| [I18n.t("enums.valuation.grade.#{k}"), k]} %>
            <% end %>
      <div class="font-weight-bold">　ランク内容</div>
        <div class="col-md-3">
          <%= f.text_field :rank_content, autocomplete: "rank_content", class:"form form-control form-inline",placeholder: 'ランク内容' %>
        </div>
        <div class="col-md-3">
          <%= f.submit ' 新規登録 ', class: "btn btn-sm btn-success btn-inline ml-5" %>
        </div>
    </div>
    <% end %>
  </div>
  <div class ="row mt-5">

      <table class="table shadow-lg mt-4 my-5">
        <thead class="table-active">
          <tr>
            <th>見込みランク</th>
            <th>ランク内容</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @valuations.each do |valuation| %>
            <tr>
              <td><%= valuation.grade %></td>
              <td><%= valuation.rank_content %></td>
              <td><%= link_to '編集する', edit_admin_valuation_path(valuation.id), class: "btn btn-sm btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
