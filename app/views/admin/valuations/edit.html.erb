<div class="container pt-5 px-sm-0 pb-5">
  <div class="row">
    <h3>見込みランク編集</h3>
  </div>
   <div class="mt-5">
    <%= form_with model: @valuation, url:admin_valuation_path(@valuation) do |f| %>
      <div class ="row">
       <td><h5 class="font-weight-bold">ランク　</h5></td>
              <%= f.select :grade, Valuation.grades.keys.map{|k| [I18n.t("enums.valuation.grade.#{k}"), k]} %>
       <div class="font-weight-bold">　ランク内容</div>
        <div class="col-md-3">
          <%= f.text_field :rank_content, autocomplete: "rank_content", class:"form form-control form-inline",placeholder: 'ランク内容' %>
        </div>
        <div class="col-md-3 text-center">
          <%= f.submit ' 変更を保存 ', class: "btn btn-sm btn-success" %>
        </div>
        
        </br>
        
      </div>
    <% end %>
   </div>
</div>
<div class="container pb-5">
  <div class ="row my-5">
   <div class="col text-center" >
    <%= link_to "消去する", admin_valuation_path(@valuation), method: :delete, class: "btn btn-danger ml-3" , "data-confirm" => "本当に削除しますか？" %>
   </div>
  </div>
</div>
