
<div class="container pb-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h4><strong><%= "#{@user.last_name}#{@user.first_name}" %>さんの登録情報編集</strong></h4>

    <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
<div class="mt-4 shadow-lg px-5 py-5 mt-4">
  <table class="table table-borderless table-sm ml-5">
  <div class="field">
    <tr>
    <div class="field">
      <th>ユーザーID</th><td><%= @user.id %></td>
    </div>
    </tr>
  </div>

  <div class="field">
    <tr>
      <th><%= f.label :"名前" %></th>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <th><%= f.label :"フリガナ" %></th>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <th><%= f.label :"所属" %></th>
      <td><%= f.text_field :department %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <th><%= f.label :"役職" %></th>
      <td><%= f.text_field :post %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <th><%= f.label :"電話番号" %></th>
      <td><%= f.text_field :phone_number %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <th><%= f.label :"メールアドレス" %></th>
      <td><%= f.text_field :email %></td>
    </tr>
  </div>
  
  </table>
</div>
  <div class="actions mt-3 text-center mb-5">
    <%= f.submit "変更を保存", class: "btn btn-outline-danger mt-2" %>
  </div>
<% end %>
    </div>
  </div>
</div>
